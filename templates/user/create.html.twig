{% extends 'base.html.twig' %}

{% block body %}
    {% block header_title %}
        <h1 id="user-create" class="d-flex justify-content-center my-5">Register</h1>
    {% endblock %}
    
    <div class="d-flex justify-content-center">
        {{ form_start(form, {'action' : path('user_create')}) }}
            {{ form_row(form.username) }}
            {{ form_row(form.email) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}
            <div id="passwordHelpBlock" class="form-text mb-4">
                Password must contains at least 8 caracters</br>
                with lowercase and uppercase letters</br> 
                numbers and special characters.
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success mt-4">Validate</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
