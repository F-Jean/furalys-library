{% extends 'layout.html.twig' %}

    {% block header_title %}
        <h1>Modify artist</h1>
    {% endblock %}

{% block container %}
    <div class="d-flex justify-content-center align-items-center">
        <div class="w-50">
            {{ form_start(form, {'action' : path('artist_edit', { 'id' : artist.id })}) }}
                {{ form_widget(form) }}
                <p>(*) Required</p>
                <div class="d-flex justify-content-center align-items-center">
                    <button type="submit" class="btn btn-success me-5">
                        <i class="bi bi-pencil-fill"></i> Modify
                    </button>
                    <a href="{{ path('artist_list') }}" class="btn btn-primary">
                        <i class="bi bi-arrow-left-circle-fill"></i> Back to artist list
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}