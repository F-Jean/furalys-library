{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid min-vh-100 d-flex flex-column justify-content-between">

        {% block header_title %}
            <h1 id="user-create" class="d-flex justify-content-center my-5">Furalys Library</h1>
        {% endblock %}
        
        <h2 class="d-flex justify-content-center my-5">
            Easily manage your resources
        </h2>
        <div class="text-center">
            <a class="btn btn-secondary" href="{{ path('homepage') }}">
                <i class="bi bi-arrow-left-circle-fill"></i> Back to website
            </a>
        </div>
        
        <div class="d-flex justify-content-center">
            {% if error %}
                <div 
                    class="alert alert-danger d-flex justify-content-center w-25" 
                    role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
        </div>

        <section class="login-form p-4 w-25 mx-auto mt-4">
            <form action="{{ path('app_login') }}" method="post" name="login">
                <div class="mb-3">
                    <label for="username" class="form-label">Email :</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-envelope-fill"></i>
                        </span>
                        <input 
                            type="text" 
                            autocomplete="username" 
                            id="username" 
                            class="form-control" 
                            name="_username" 
                            value="{{ last_username }}" 
                            placeholder="Enter email here ..." 
                        />
                    </div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password :</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-lock-fill"></i>
                        </span>
                        <input 
                            type="password" 
                            autocomplete="current-password" 
                            id="password" class="form-control" 
                            name="_password" 
                            placeholder="Enter password here ..." 
                        />
                    </div>
                </div>

                <input 
                    type="hidden" 
                    name="_csrf_token" 
                    value="{{ csrf_token('authenticate') }}"
                >

                <div class="text-center mt-4">
                    <button class="btn btn-success" type="submit">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </button>
                </div>
            </form>
        </section>

        <div class="options text-center mt-4">
            <p>New here ?</p>
            <div class="mt-3">
                <a class="btn btn-secondary" href="#" role="button">
                    <i class="bi bi-person-plus-fill"></i> Register
                </a>
            </div>
            <div class="mt-3">
                <a class="btn btn-secondary" href="{{ path('homepage') }}" role="button">
                    <i class="bi bi-house-door-fill"></i> Check my portfolio here
                </a>
            </div>
        </div>

        <div class="general-infos text-center mt-5">
            <h2>What is Furalys library ?</h2>
            <p class="mt-3">COMING SOON</p>
        </div>

        <footer class="login-footer mt-5">
            <ul class="nav justify-content-center border-bottom pb-3 mb-3">
            </ul>
            <p class="text-center text-muted">&copy; Furalys</p>
        </footer>
        
    </div>
{% endblock %}